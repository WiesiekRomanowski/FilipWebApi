@model List<CustomerViewModel>

@{
    ViewData["Title"] = "Customers";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

@if (Model.Count == 0)
{
    <div>No customers!</div>
}
else
{
    @foreach (var customer in Model)
    {
        <div>@customer.FullName</div>
    }
}


